<form id="car-form" class="d-flex flex-column justify-content-between" enctype="multipart/form-data">
  <div class="form-main p-3 mb-4">
    <div class="row mb-3">
      <label for="nama" class="col-sm-2 col-form-label">Nama</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" name="name" id="nama" required placeholder="Avanza">
      </div>
    </div>
    <div class="row mb-3">
      <label for="rent" class="col-sm-2 col-form-label">Sewa Per Hari</label>
      <div class="col-sm-10">
        <input type="number" class="form-control" name="rent" id="rent" required placeholder="Rp 0,-">
      </div>
    </div>
    <div class="row mb-3">
      <label for="size" class="col-sm-2 col-form-label">Ukuran</label>
      <div class="col-sm-10">
        <select id="size" class="form-select" name="size" aria-label="Default select example" required>
          <option value="Small" selected>Small</option>
          <option value="Medium">Medium</option>
          <option value="Large">Large</option>
        </select>
      </div>
    </div>
    <label for="photo" class="row mb-3">
      <div class="col-sm-2 col-form-label">
        Foto
      </div>
      <div class="col-sm-10">
        <span class="form-control photo-input">Upload Image</span>
        <input type="file" name="photo" id="photo" hidden required accept="image/*">
      </div>
    </label>
  </div>
  <div class="d-flex gap-2">
    <a href="/" role="button" class="btn btn-outline-primary">Cancel</a>
    <button type="submit" id="save" class="btn btn-primary" disabled>Save</button>
  </div>
</form>
<script src="../js/Form.js"></script>